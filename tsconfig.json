{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": [
      "node",
      "react",
      "react-dom"
    ]
  },
  "exclude": ["node_modules", "public", ".cache"]
}
