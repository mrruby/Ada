{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "jsxImportSource": "react",
    "paths": {
      "components/*": ["components/*"],
      "helpers/*": ["helpers/*"],
      "images/*": ["images/*"]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "gatsby"
    ]
  },
  "exclude": ["node_modules", "public", ".cache"]
}
